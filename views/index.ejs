<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <h1>Url Shortener</h1>
        <form action="/shortUrls" method="POST" class="my-4">
            <div class="row">
                <div class="col">
                    <label for="fullUrl" class="visually-hidden">Url</label>
                    <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control">
                </div>
                <div class="col-auto">
                    <button class="btn btn-success btn-shorten" type="submit">Shorten</button>
                </div>
            </div>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=> { %>
                    <tr>
                        <td><a href=<%=shortUrl.fullUrl %>><%= shortUrl.fullUrl %></a></td>
                        <td><a href=<%=shortUrl.shortUrl %>><%= shortUrl.shortUrl %></a></td>
                        <td>
                            <%= shortUrl.noOfClicks %>
                        </td>
                    </tr>

                    <%})%>

            </tbody>
        </table>
    </div>
</body>

</html>